.recommendContainer swiper {
  width: 100%;
  height: 370rpx;
}
.recommendContainer swiper image {
  width: 100%;
  height: 370rpx;
}
.recommendContainer .indexServicePolicy {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  height: 70rpx;
}
.recommendContainer .indexServicePolicy .PolicyItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.recommendContainer .indexServicePolicy .PolicyItem ._img {
  width: 30rpx;
  height: 30rpx;
}
.recommendContainer .indexServicePolicy .PolicyItem ._span {
  font-size: 25rpx;
}
.recommendContainer .kingKongList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.recommendContainer .kingKongList .kingKongItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 20%;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.recommendContainer .kingKongList .kingKongItem ._img {
  width: 110rpx;
  height: 110rpx;
}
.recommendContainer .kingKongList .kingKongItem ._p {
  font-size: 25rpx;
  padding: 15rpx;
}
.recommendContainer .categoryModule .categoryModuleList .bigImg {
  width: 100%;
  height: 375rpx;
}
.recommendContainer .categoryModule .categoryModuleList .scrollItemListContainer {
  margin-bottom: 20rpx;
  white-space: nowrap;
}
.recommendContainer .categoryModule .categoryModuleList .scrollItemListContainer .scrollItemList {
  display: inline-block;
  width: 200rpx;
  vertical-align: top;
  margin-left: 20rpx;
}
.recommendContainer .categoryModule .categoryModuleList .scrollItemListContainer .scrollItemList.more {
  width: 200rpx;
  height: 200rpx;
  line-height: 280rpx;
  background-color: #eee;
  text-align: center;
}
.recommendContainer .categoryModule .categoryModuleList .scrollItemListContainer .scrollItemList .scrollItemImg {
  width: 200rpx;
  height: 200rpx;
  background-color: #eee;
}
.recommendContainer .categoryModule .categoryModuleList .scrollItemListContainer .scrollItemList ._p {
  font-size: 26rpx;
  white-space: pre-wrap /*单行文本换行*/;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

